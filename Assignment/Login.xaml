<Window x:Class="Assignment.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập" Height="285" Width="500" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="ĐĂNG NHẬP" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Height="30"/>

            <TextBlock Text="Mật khẩu:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <Button Content="Đăng Nhập" Width="100" Height="35" Background="Green" Foreground="White"
                    Click="LoginButton_Click" Margin="0,20,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
