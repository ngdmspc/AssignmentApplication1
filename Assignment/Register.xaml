<Window x:Class="Assignment.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Ký" Height="400" Width="550">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="ĐĂNG KÝ" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Họ và tên:"/>
            <TextBox x:Name="FullNameTextBox" Height="30"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Height="30"/>

            <TextBlock Text="Mật khẩu:"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <TextBlock Text="Xác nhận mật khẩu:"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="30"/>
            <TextBlock Text="Số điện thoại:"/>
            <TextBox x:Name="PhoneTextBox" Height="30"/>


            <Button Content="Đăng Ký" Width="120" Height="40"
                    Background="Orange" Foreground="White" FontWeight="Bold"
                    Click="RegisterButton_Click" Margin="10,20,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
