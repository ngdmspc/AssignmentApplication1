<Window x:Class="Assignment.StudentLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment"
        mc:Ignorable="d"
        Title="StudentLogin" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="3" Content="Student Login" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="40" Margin="112,12,0,0" Grid.RowSpan="2"/>
        <Label  Grid.Column="1" Content="Username:" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" FontSize="18"/>
        <Label  Grid.Column="1" Content="Password:" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" FontSize="18" Grid.RowSpan="2" Margin="3,1,0,0"/>
        <TextBox Name="txtUsername" Grid.Column="3" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="385" TextChanged="TextBox_TextChanged"/>
        <PasswordBox Name="txtPassword" Grid.Column="3" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Top" Width="385"/>
        <Button Name="btnName" Grid.Column="3" Content="Login" HorizontalAlignment="Left" Grid.Row="5" VerticalAlignment="Top" Click="btnName_Click"/>
        <Button Name="btnCancel" Grid.Column="3" Content="Cancel" HorizontalAlignment="Left" Grid.Row="5" VerticalAlignment="Top" Click="Button_Click" Margin="173,0,0,0"/>

    </Grid>
</Window>
